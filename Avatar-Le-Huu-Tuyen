    <script>
        function syncAllRowHeights() {
            const rows = {};
            // Group textareas by their data-sync-height attribute
            document.querySelectorAll('[data-sync-height]').forEach(el => {
                const rowName = el.dataset.syncHeight;
                if (!rows[rowName]) {
                    rows[rowName] = [];
                }
                rows[rowName].push(el);
            });

            // For each group, find the max height and apply it
            for (const rowName in rows) {
                const elements = rows[rowName];
                let maxHeight = 0;

                // First, reset height to auto to get the natural scrollHeight
                elements.forEach(el => {
                    el.style.height = 'auto';
                });

                // Then, find the maximum scrollHeight in the row
                elements.forEach(el => {
                    if (el.scrollHeight > maxHeight) {
                        maxHeight = el.scrollHeight;
                    }
                });

                // Finally, set all elements in the row to the max height
                elements.forEach(el => {
                    // Add a small buffer for padding/border differences
                    el.style.height = (maxHeight + 2) + 'px';
                });
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const textareas = document.querySelectorAll('.canvas-textarea');
            
            textareas.forEach(textarea => {
                // When a user types, sync all rows
                textarea.addEventListener('input', () => {
                    syncAllRowHeights();
                });
            });

            // Initial sync on load
            // Use a small timeout to ensure all fonts and elements are rendered
            setTimeout(syncAllRowHeights, 100);

            // Sync on window resize
            window.addEventListener('resize', syncAllRowHeights);
        });
    </script>

